{
    "name": "neutron",
    "description": "neutron update server",
    "repository": "https://github.com/jubianchi/neutron",
    "keywords": ["node", "koa", "electron", "squirrel"],
    "env": {
        "NEUTRON_SCHEME": {
            "description": "Scheme used to reach the neutron instance",
            "value": "https",
            "required": true
        },
        "NEUTRON_HOST": {
            "description": "Public host of the neutron instance",
            "value": "<appname>.herokuapp.com",
            "required": true
        },
        "NEUTRON_PORT": {
            "description": "Public port used to reach the neuron instance",
            "value": 443,
            "required": true
        },
        "NEUTRON_STORAGE": {
            "description": "Storage provider used to host updates",
            "value": "azure",
            "required": true
        },
        "NEUTRON_STORAGE_AZURE_ACCOUNT": {
            "description": "Azure storage account name",
            "value": "neutron",
            "required": true
        },
        "NEUTRON_STORAGE_AZURE_KEY": {
            "description": "Azure storage account key",
            "value": "",
            "required": true
        }
    },
    "image": "heroku/nodejs"
}
